<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="exercise"
            type="com.mikolove.allmight.database.entities.Exercise" />

        <variable
            name="clickListener"
            type="com.mikolove.allmight.views.settings.exercise.SettingsExerciseListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/list_item_exercise_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@{exercise.name}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/test"
            android:onClick="@{(view) -> clickListener.onClick(view, exercise)}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_exercise_ic_delete"
            app:layout_constraintEnd_toStartOf="@+id/list_item_exercise_ic_delete"
            app:layout_constraintTop_toTopOf="@+id/list_item_exercise_ic_delete"
            app:layout_constraintVertical_bias="0.2"
            tools:text="@string/test" />

        <ImageView
            android:id="@+id/list_item_exercise_ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_delete_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{(view) -> clickListener.onClick(view, exercise)}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>